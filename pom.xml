<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.solace</groupId>
    <artifactId>solace-messaging</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>

  <artifactId>solace-messaging-client-sampler</artifactId>
  <name>Sampler for Solace PubSub+ Messaging API for Java</name>

<description>Java client API sampler for Solace PubSub+ advanced event broker.</description>

  <organization>
    <url>https://solace.com</url>
    <name>Solace Corporation</name>
  </organization>
  
  <developers>
    <developer>
      <email>info@solace.com</email>
      <name>Solace</name>
      <organization>Solace Corporation</organization>
      <organizationUrl>https://solace.com</organizationUrl>
    </developer>
  </developers>

  <licenses>
    <license>
      <name>License Agreement for Solace Software</name>
      <url>https://solace.com/license-software</url>
    </license>
  </licenses>

  <properties>
    <maven.surefire.plugin.version>2.22.2</maven.surefire.plugin.version>
  </properties>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <!--dont run tests -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${maven.surefire.plugin.version}</version>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
      <!--
            <plugin>
              <groupId>org.codehaus.mojo</groupId>
              <artifactId>build-helper-maven-plugin</artifactId>
              <version>3.0.0</version>
              <executions>
                <execution>
                  <id>compile</id>
                  <phase>generate-sources</phase>
                  <goals>
                    <goal>add-source</goal>
                  </goals>
                  <configuration>
                    <sources>
                      <source>../messaging-client/src/main/java</source>
                    </sources>
                  </configuration>
                </execution>

              </executions>
            </plugin>
      -->
      <!--dont create a jar file
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <id>default-jar</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      -->

      <!-- don't install anything-->
      <plugin>
        <artifactId>maven-install-plugin</artifactId>
        <executions>
          <execution>
            <id>default-install</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>

      <!-- do not deploy anything -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

    </plugins>
  </build>


  <dependencies>
    <dependency>
      <groupId>com.solace</groupId>
      <artifactId>solace-messaging-client</artifactId>
      <version>${project.parent.version}</version>
    </dependency>

  </dependencies>

</project>
